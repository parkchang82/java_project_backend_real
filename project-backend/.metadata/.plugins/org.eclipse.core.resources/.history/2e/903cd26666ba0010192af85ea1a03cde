package com.example.demo;

//예시: AuthController.java (로그인 요청 처리)
@RestController
@RequestMapping("/api")
public class AuthController {
 
 // (1) 프론트엔드에서 보낸 JSON 데이터를 받을 DTO 클래스
 public static class LoginRequest {
     private String username;
     private String password;
     // Getter, Setter 생략...
 }

 @PostMapping("/login")
 public ResponseEntity<?> login(@RequestBody LoginRequest request) {
     String username = request.getUsername();
     String password = request.getPassword();
     
     // (2) 실제 인증 로직 (DB 조회 및 Spring Security 사용)
     boolean isAuthenticated = checkCredentials(username, password); // 구현된 인증 메서드 호출
     
     if (isAuthenticated) {
         // (3) 성공 시 JWT 토큰 또는 성공 상태를 응답
         return ResponseEntity.ok(Map.of("success", true, "token", "your_jwt_token"));
     } else {
         // (4) 실패 시 401 Unauthorized 상태 응답
         return ResponseEntity.status(HttpStatus.UNAUTHORIZED).body(Map.of("success", false, "message", "아이디 또는 비밀번호 오류"));
     }
 }
 // ...
}